<h1>Editing Book</h1>
<div class="errors">
  <% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
</div>

<%= form_with model: @book do |f| %>
  <div class="form-box">
    <div class="forn-title">Title</div>
    <%= f.text_field :title %>
    <div class="form-body">Body</div>
    <%= f.text_area :body %>
    <div class="btn"><%= f.submit 'Update Book' %></div>
  </div>
<% end %>

<%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>